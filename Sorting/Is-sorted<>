// Recursive approach to check if an Array is sorted or not
#include <iostream>
using namespace std;

bool arraySortedOrNot(int a[], int n)
{
    if (n == 1 || n == 0)
    {
        return true;
    }

    return a[n - 1] >= a[n - 2] &&
     arraySortedOrNot(a, n - 1);
}
int main() 
{
    int arr[] = { 20, 23, 23, 45, 78, 88 };
    int n = sizeof(arr) / sizeof(arr[0]);
     
    if (arraySortedOrNot(arr, n))
        cout << "Yes" << "\n";
    else
        cout << "No" << " \n";
     
    return 0;
}
 
