#include <iostream>

int sumArray(int arr[], int size) {
    // Base case: If the array is empty, the sum is 0.
    if (size == 0) {
        return 0;
    }
    // Recursive case: Sum the last element with the sum of the rest of the elements.
    else {
        return arr[size - 1] + sumArray(arr, size - 1);
    }
}

int main() {
    int arr[] = {1, 2, 3, 4, 5};
    int size = sizeof(arr) / sizeof(arr[0]);
    
    int result = sumArray(arr, size);
    
    std::cout << "The sum of the elements in the array is: " << result << std::endl;
    
    return 0;
}

