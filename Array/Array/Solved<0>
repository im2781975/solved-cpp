Ax*2+bx+c
// C++ code for the approach
 
#include<bits/stdc++.h>
using namespace std;
 
// Function to apply the given equation on each element of the array
void applyEquation(int arr[], int n, int a, int b, int c) {
      // traversing array and updating each value
      // as per equation
    for(int i=0; i<n; i++) {
        arr[i] = a*arr[i]*arr[i] + b*arr[i] + c;
    }
}
 
// Driver's code
int main() {
      // Input array
    int arr[] = { -21 ,-15, 12, 13, 14 };
    int n = sizeof(arr)/sizeof(arr[0]);
 
    int a = -6, b = -7, c = 2;
 
    // Funciton call
    applyEquation(arr, n, a, b, c);
 
    // Sorting the modified array
    sort(arr, arr+n);
 
    // Printing the sorted array
      cout << "Array after sorting is : ";
    for(int i=0; i<n; i++) {
        cout << arr[i] << " ";
    }
 
    return 0;
}
