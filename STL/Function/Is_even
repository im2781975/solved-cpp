#include <iostream> 
#include <algorithm> 
using namespace std;
 
bool isEven(int a) 
    { return (a % 2); }
bool isOdd(int a) 
    { return (a % 2 == 0); }
 
int main()
{
    int arr[]{ 2, 4, 6, 8, 12, 0 };
    int n = sizeof(arr)/sizeof(arr[0]);
 
    cout << "Array contains :";
    for (int i = 0; i < n; i++)
        cout << ' ' << arr[i];
    cout << "\n";
 
    bool even = none_of(arr, arr + n, isEven);
    bool odd =  none_of(arr, arr + n, isOdd);
 
    if ((!even) && (!odd))
        cout << "Contains both even and odd number\n";
    else if ((!even) && odd)
        cout << "Contains odd number only\n";
    else if (even && (!odd))
        cout << "Contains even number only\n";
    else
        cout << "Array is empty\n";
 
    return 0;
}
